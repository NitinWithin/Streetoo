<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VendorInfoActivity"
    tools:showIn="@layout/activity_vendor_info"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/relLayoutVendorInfo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status" />

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Rating" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cuisine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/OrderDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_vertical"
                android:text="@string/FoodDeliveryPhrase"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/OnlineOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_now"
                android:background="@drawable/button_round_corner"
                android:layout_margin="5dp"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <RatingBar
            android:id="@+id/VendorRating"
            style="@android:style/Widget.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:clickable="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="?attr/ratingBarStyle"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RatingtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us!!"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="25dp"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/AvgCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Cost"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/avgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**Description**"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/OwnerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/vendorDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**Description**"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/view123"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/OwnertextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/OwnerNametextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name : "
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/OwnerContacttextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile : "
            android:layout_marginTop="5dp"/>
        

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>